<%- include('partials/header') -%>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="postAuthor">Author Name</label>
        <input type="text" class="form-control text" name ="postAuthor" id="postAuthor" required>
    </div>
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input type="text" class="form-control text" name ="postTitle" id="postTitle">
    </div>
<div class="form-group">
    <label for="postContent">Post</label>
    <textarea name="postContent" id="postContent" rows="10" class="form-control"></textarea>
</div>
<button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>
<%- include('partials/footer') -%>